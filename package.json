{
  "name": "daoda-component-core",
  "version": "1.0.0",
  "description": "基于 Vue3 + TypeScript 的企业级组件库",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "packages/components/*/src",
    "packages/config/src",
    "packages/utils/src",
    "README.md"
  ],
  "scripts": {
    "dev": "pnpm --filter demo dev",
    "build": "pnpm run build:components && pnpm run build:config && pnpm run build:utils && pnpm run build:core",
    "build:components": "pnpm --filter daoda-button build && pnpm --filter daoda-select build",
    "build:config": "pnpm --filter daoda-config build",
    "build:utils": "pnpm --filter daoda-utils build",
    "build:core": "vite build",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "lint": "eslint packages/**/*.{ts,vue}",
    "lint:fix": "eslint packages/**/*.{ts,vue} --fix",
    "publish": "pnpm run build && npm publish",
    "prepublishOnly": "pnpm run build",
    "clean": "lerna clean && rm -rf dist"
  },
  "keywords": [
    "vue3",
    "typescript",
    "component-library",
    "ui-components",
    "element-plus"
  ],
  "author": "Daoda Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/lijiaming123/vue-components.git"
  },
  "bugs": {
    "url": "https://github.com/lijiaming123/vue-components/issues"
  },
  "homepage": "https://github.com/lijiaming123/vue-components#readme",
  "dependencies": {
    "@emotion/css": "^11.13.5",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "eslint": "8.57.0",
    "eslint-plugin-vue": "8.7.1",
    "lerna": "^8.2.3",
    "typescript": "^5.8.3"
  },
  "devDependencies": {
    "@testing-library/vue": "8.1.0",
    "@types/jest": "29.5.12",
    "@types/node": "^24.0.13",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "@vitejs/plugin-vue": "^6.0.0",
    "@vitest/ui": "^3.2.4",
    "@vue/compiler-sfc": "^3.5.17",
    "@vue/test-utils": "2.4.4",
    "@vue/vue3-jest": "^29.2.6",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "jest": "29.7.0",
    "jest-environment-jsdom": "^30.0.4",
    "jsdom": "^26.1.0",
    "prettier": "^3.6.2",
    "ts-jest": "29.1.1",
    "vite": "^7.0.4",
    "vitest": "^3.2.4",
    "vue": "^3.5.17"
  },
  "peerDependencies": {
    "vue": "^3.0.0",
    "element-plus": "^2.0.0"
  }
}
